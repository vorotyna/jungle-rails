<section>
    <h1>Login</h1>

    <% flash.each do |type, msg| %>
      <div class="alert alert-info">
        <li><%= msg %></li>
      </div>
    <% end %>

    <%= form_tag '/login' do %> 
    
    <div class="user-form">
      <div>
        Email: </br> 
        <%= text_field_tag :email %>
      </div>
    </br>
      <div>
        Password: </br> 
        <%=password_field_tag :password %>
      </div>
    </div>

    </br>
    <%= submit_tag "Submit", class: 'btn btn-success' %> <% end %>
</section>